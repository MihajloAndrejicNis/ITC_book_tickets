<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    ime, prezime, mejl, broj mesta-->

    <EditText

        android:id="@+id/name_et"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="Name"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        />

    <EditText

        android:id="@+id/last_name_et"

        app:layout_constraintTop_toBottomOf="@id/name_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="Last name"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/about_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        app:layout_constraintTop_toBottomOf="@id/last_name_et"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"

        />

    <TextView

        android:id="@+id/mail_et"

        app:layout_constraintTop_toBottomOf="@id/about_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="italic"

        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        />

    <EditText

        android:id="@+id/seats_number_et"

        app:layout_constraintTop_toBottomOf="@id/mail_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:hint="Number of seats"
        android:inputType="numberSigned"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        />

</androidx.constraintlayout.widget.ConstraintLayout>